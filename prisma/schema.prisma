generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["fullTextSearch"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}


model Product {
    id                     Int                      @id @default(autoincrement())
    name                   String
    size                   String
    availability           String
    price                  Int
    description            String?
    image                  String?
    categoryId             Int
    category               Category @relation(fields: [categoryId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}

model Category {
    id             Int             @id @default(autoincrement())
    name           String
    image          String?
    product        Product[]
}

